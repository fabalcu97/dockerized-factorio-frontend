/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

html, body {
    @apply h-full overflow-hidden;
}

::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: transparent;
    border-radius: 10px;

}

::-webkit-scrollbar-thumb {
    background: gray;
    opacity: 0.7;
    border-radius: 10px;
}